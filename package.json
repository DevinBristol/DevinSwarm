{
  "name": "devinswarm",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "tsc --noEmit",
    "start:service": "node scripts/run-ts-node.js apps/service/src/server.ts",
    "start:worker": "node scripts/run-ts-node.js apps/worker/src/worker.ts",
    "start:reviewer-worker": "node scripts/run-ts-node.js apps/worker/src/reviewer.ts",
    "start:ops-worker": "node scripts/run-ts-node.js apps/worker/src/ops.ts",
    "start:scout": "node scripts/run-ts-node.js apps/scout/src/scout.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "lint": "echo 'add eslint later'",
    "dev": "nodemon apps/service/src/server.ts",
    "start:dev-worker": "npm run start:worker",
    "bootstrap:codex": "pwsh -File scripts/codex_bootstrap.ps1",
    "codex:context": "node scripts/codex_context.mjs",
    "check:sot": "node scripts/check-sot-updated.mjs",
    "ci:install": "npm ci --ignore-scripts --prefer-offline --no-audit --progress=false",
    "test:orchestrator": "node scripts/run-ts-node.js scripts/test-orchestrator-resume.ts && node scripts/run-ts-node.js scripts/test-orchestrator-events.ts",
    "test:orchestrator-events": "node scripts/run-ts-node.js scripts/test-orchestrator-events.ts",
    "test:orchestrator-transitions": "node scripts/run-ts-node.js scripts/test-orchestrator-transitions.ts"
  },
  "engines": {
    "node": ">=20 <21",
    "npm": ">=10"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "nodemon": "^3.1.11",
    "prisma": "^5.21.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@langchain/langgraph": "^1.0.2",
    "@octokit/auth-app": "^7.0.0",
    "@octokit/core": "^6.1.2",
    "@octokit/rest": "^21.0.0",
    "@prisma/client": "^5.21.1",
    "bullmq": "^5.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "fastify": "^4.28.1",
    "fastify-healthcheck": "^4.4.0",
    "ioredis": "^5.4.1",
    "openai": "^4.77.0",
    "pg": "^8.12.0",
    "pino": "^9.5.0",
    "uuid": "^11.0.3",
    "winston": "^3.15.0",
    "zod": "^3.24.1"
  }
}
