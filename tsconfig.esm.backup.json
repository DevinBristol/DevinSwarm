{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2023"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": [
    "service/**/*.ts",
    "orchestrator/**/*.ts",
    "runtime/**/*.ts",
    "workers/**/*.ts",
    "tools/**/*.ts",
    "prompts/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

